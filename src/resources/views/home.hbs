<div class="row mt-5">
  {{#each cources}}
  <div class="col-md-4">
    <div class="card">
      <a href="/cources/{{this.slug}}">
        <img src="{{this.image}}" class="card-img-top" alt="{{this.name}}">
      </a>
      <div class="card-body">
        <a href="/cources/{{this.slug}}">
          <h5 class="card-title">{{this.name}}</h5>
        </a>
        <p class="card-text">{{{this.description}}}</p>
        <a href="#" class="btn btn-primary">Mua ngay</a>
      </div>
    </div>
  </div>
  {{/each}}
</div>