<div class="mt-3">
  <h2>Tạo mới Khóa Học</h2>
  
  <form method="POST" action="/cources/store">
    <div class="form-group">
      <label for="inputName">Tên khóa học</label>
      <input type="text" class="form-control" id="inputName" name="name">
    </div>
    <div class="form-group">
      <label for="inputDesc">Mô tả</label>
      <textarea class="form-control" id="inputDesc" rows="3" name="description"></textarea>
    </div>
    <div class="form-group">
      <label for="inputVideoId">Video ID</label>
      <input type="text" class="form-control" id="inputVideoId" name="videoId">
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
  </form>
</div>