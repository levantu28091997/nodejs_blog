<div class="mt-3">
  <h2>Cập nhật Khóa Học</h2>
  
  <form method="POST" action="/cources/{{cource._id}}?_method=PUT">
    <div class="form-group">
      <label for="inputName">Tên khóa học</label>
      <input type="text" class="form-control" id="inputName" value="{{cource.name}}" name="name">
    </div>
    <div class="form-group">
      <label for="inputDesc">Mô tả</label>
      <textarea class="form-control" id="inputDesc" rows="3" name="description">{{cource.description}}</textarea>
    </div>
    <div class="form-group">
      <label for="inputVideoId">Video ID</label>
      <input type="text" class="form-control" id="inputVideoId" value="{{cource.videoId}}" name="videoId">
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
  </form>
</div>